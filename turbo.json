{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "AUTH_SECRET",
    "AUTH_URL",
    "CRON_SECRET",
    "NEXT_PUBLIC_BASE_URL",
    "RESEND_API_KEY",
    "DATABASE_URL",
    "RABBITMQ_URL",
    "REDIS_HOST",
    "REDIS_PORT"
  ]
}
